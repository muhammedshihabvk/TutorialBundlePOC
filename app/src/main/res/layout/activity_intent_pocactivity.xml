<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".IntentPOCActivity">

    <Button
        android:onClick="onButtonClickIntent"
        android:id="@+id/launchMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Map" />
    <Button
        android:onClick="onButtonClickIntent"
        android:id="@+id/launchMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Market" />

    <Button
        android:onClick="onButtonClickIntent"
        android:id="@+id/sendEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Email" />

    <Button
        android:onClick="onButtonClickIntent"
        android:id="@+id/sendImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Image" />

    <Button
        android:onClick="onButtonClickIntent"
        android:id="@+id/sendImageExternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Image Extrenal" />




</LinearLayout>